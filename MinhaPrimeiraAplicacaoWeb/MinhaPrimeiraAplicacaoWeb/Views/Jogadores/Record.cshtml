@using MinhaPrimeiraAplicacaoWeb.Models.Jogador
@model JogadorModel
<div>
    <h3>
        Jogador
    </h3>
    <form asp-controller="Jogadores" asp-action="Save" method="post">
        <input type="hidden" asp-for="ID">
        <div class="form-group">
            <label>Nome</label>
            <input type="text" id="nome" class="form-control" asp-for="Nome" />
        </div>

        <div class="form-group">
            <label>Clube</label>
            <input type="text" id="clube" class="form-control" asp-for="Clube" />
        </div>

        <div class="form-group">
            <label>Posição</label>
            <input type="text" id="posicao" class="form-control" asp-for="Posicao" />
        </div>

        <div class="form-group">
            <label>Idade</label>
            <input type="text" id="idade" class="form-control" asp-for="Idade" />
        </div>
       <br>
        <button type="submit" class="btn btn-primary float-end m-1">Salvar</button>
        <a type="button" class="btn btn-secondary float-end m-1" asp-controller="Jogadores" asp-action="Index">Voltar</a>
    </form>
</div>